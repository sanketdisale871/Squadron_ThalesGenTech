    .sidebar .logo {
      width: 90%;
      margin-bottom: 5%;
    }

    .sidebar.active {
      width: 100px;
      overflow: hidden;
    }

    .sidebar li {
      list-style: none;
    }

    .sidebar a {
      text-decoration: none;
    }

    .sidebar ul {
      width: 100%;
      margin: 0px;
      padding: 0px;
    }

    .sidebar span {
      margin-right: 15px;
    }

    .sidebar--items a,
    .sidebar--bottom-items a {
      display: flex;
      flex-flow: row;
      align-items: center;
      margin-bottom: 10px;
      font-size: 1.1rem;
      color: #ffffff;
      padding: 7px;
      border-radius: 13px;
    }

    .sidebar--items a:hover,
    .sidebar--bottom-items a:hover {
      background-color: #cdffcf;
      color: #0031b9;
    }

    #active--link {
      background-color: #39c440;
      color: #fff;
    }

    .sidebar--items {
      flex-grow: 0.85;
      /* This makes the navigation items take up the remaining space */
    }
  </style>



  <style>
    .section-name {
      font-family: "Poppins", sans-serif;
    }

    .overview {
      font-family: "Poppins", sans-serif;
    }

    div {
      font-family: "Poppins", sans-serif;
    }
  </style>

  <style>
    .expand-card:hover {
      transform: scale(1.02);

      box-shadow: 4px 8px 10px rgba(0, 0, 0, 0.2);

    }
  </style>


<style>
  .modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background-color: white;
  margin: 9% auto;
  padding: 20px;
  border: 1px solid #888;
  border-radius: 15px;
  width: 453px;
  height: min-content;
}

.close {
  float: right;
  font-size: 24px;
  cursor: pointer;
}

form {
  display: flex;
  flex-direction: column;
}

form input,
form select {
  margin-bottom: 10px;
}
</style>
</head>

<body>

  <!-- Navigation drawer -->
  <div class="sidebar">
    <!-- Logo Image -->
