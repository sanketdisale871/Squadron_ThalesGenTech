  <!-- Sidebar CSS -->
  <style>
    .sidebar {
      font-family: "Poppins", sans-serif;
      position: fixed;
      top: 0;
      left: 0;
      width: 250px;
      height: 100%;
      background-color: #041643;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 30px;
