      <h2
        style="font-size: 22px; font-weight: bold; color: #333; margin-top: 30px; margin-bottom: 20px; padding-left: 10px;">
        Overview
      </h2>

      <!-- Row with 3 Columns -->
      <div style="display: flex; justify-content: space-between; padding-left: 15px; padding-right: 15px; ">


        <div style="flex: 1; margin-right: 10px;">
          <div class="expand-card"
            style="background-color:#e8efff; padding: 15px; border-radius: 10px; box-shadow: 2px 4px 3px rgba(0, 0, 0, 0.1); text-align: left;">
            <div style="display: flex; flex-direction: row; align-items: center;justify-content: space-between; ">
              <div style="font-size: 30px; font-weight: bold; color: #000000;">
                1025
              </div>
              <div style="font-size: 50px; color: #072777; margin-bottom: 0px;">
                <i class="ri-cash-fill"></i>
              </div>
            </div>

            <div style="font-size: 18px; font-weight: bold; color: #333; margin-bottom: 10px;">
              Total Detected Attacks
            </div>

          </div>
        </div>

        <div style="flex: 1; margin-right: 10px;">
          <div class="expand-card"
            style="background-color:#e4ffe0; padding: 15px; border-radius: 10px; box-shadow: 2px 4px 3px rgba(0, 0, 0, 0.1); text-align: left;">
            <div style="display: flex; flex-direction: row; align-items: center;justify-content: space-between; ">
              <div style="font-size: 30px; font-weight: bold; color: #000000;">
                250
              </div>

              <div style="font-size: 50px; color: #072777; margin-bottom: 0px;">
                <i class="ri-database-2-fill"></i>
              </div>

            </div>
            <div style="font-size: 18px; font-weight: bold; color: #333; margin-bottom: 10px;">
              Honeypot Attack Count 
            </div>

          </div>
        </div>

        <div style="flex: 1; margin-right: 10px;">
          <div class="expand-card"
            style="background-color:#fffce0; padding: 15px; border-radius: 10px; box-shadow: 2px 4px 3px rgba(0, 0, 0, 0.1); text-align: left;">
            <div style="display: flex; flex-direction: row; align-items: center;justify-content: space-between; ">
              <div style="font-size: 30px; font-weight: bold; color: #000000;">
               1245
              </div>

              <div style="font-size: 50px; color: #072777; margin-bottom: 0px;">
                <i class="ri-search-eye-line"></i>
              </div>

            </div>
            <div style="font-size: 18px; font-weight: bold; color: #333; margin-bottom: 10px;">
              Number of URLs Analyzed
            </div>

          </div>
        </div>

    

        
        
      </div>
    </div>

    <!-- Modal for Invest More -->
    <div id="investMoreModal" class="modal">
      
    </div>
    
    

    <h2
        style="font-size: 22px; font-weight: bold; color: #333; margin-top: 30px; margin-bottom: 20px; padding-left: 10px;">
        Visualization
      </h2>

    <div style="
      margin:30px;
      display: flex;
      width: auto;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      justify-content: space-around;
      height: 400px;
    ">
      <!-- Column 1: Pie Chart -->
      <div style="
              flex: 1;
              padding: 10px; /* Reduce padding */
              border-right: 1px solid #e0e0e0;
              display: flex;
              align-items: center;
              justify-content: center;
            ">
            <h3>Distribution of Cyber <br>Attack Types</h3> <br>
           
        <canvas id="liabilitiesPieChart" style="width: 80%; height: 80%;"> /canvas> <!-- Adjusted canvas size -->
      </div>

      <!-- Column 2: Line Chart -->
      <div style="
              flex: 1;
              padding: 10px; /* Reduce padding */
              display: flex;
              align-items: center;
              justify-content: center;
            ">
        <canvas id="liabilitiesGrowthChart" style="width: 80%; height: 80%;"></canvas> <!-- Adjusted canvas size -->
      </div>
    </div>

    <h2
        style="font-size: 22px; font-weight: bold; color: #333; margin-top: 30px; margin-bottom: 20px; padding-left: 10px;">
        Threat Details
      </h2>
    <div style="
      margin: 30px;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      overflow-x: auto;
    ">
      <table style="
        width: 100%;
        border-collapse: collapse;
        font-family: 'Arial', sans-serif;
        color: #333;
      ">
        <!-- Table Header -->
        <thead>
          <tr style="
            background-color: #f5f7fa;
            text-align: left;
            border-bottom: 2px solid #e0e0e0;
            color: #072777;
          ">
            <th style="padding: 15px 10px;">Threat Type</th>
            <th style="padding: 15px 10px;">Source</th>
            <th style="padding: 15px 10px;">Timestamp</th>
            <th style="padding: 15px 10px;">Status</th>
          </tr>
        </thead>

        <!-- Table Body -->
        <tbody>
          <!-- Example Row 1 -->
          <tr style="
            border-bottom: 1px solid #e0e0e0;
            transition: background-color 0.2s;
          " onmouseover="this.style.backgroundColor='#f0f4f8';" onmouseout="this.style.backgroundColor='transparent';">
            <td style="padding: 15px 10px;">Phishing</td>
            <td style="padding: 15px 10px;">example.com</td>
            <td style="padding: 15px 10px;">2024-12-01 10:15 AM</td>
            <td style="padding: 15px 10px;">
              <span style="
                background-color: #ffcd56;
                padding: 5px 10px;
                border-radius: 5px;
                color: #333;
                font-weight: bold;
              ">Mitigated</span>
            </td>
          </tr>

          <!-- Example Row 2 -->
          <tr style="
            border-bottom: 1px solid #e0e0e0;
            transition: background-color 0.2s;
          " onmouseover="this.style.backgroundColor='#f0f4f8';" onmouseout="this.style.backgroundColor='transparent';">
            <td style="padding: 15px 10px;">Malware</td>
            <td style="padding: 15px 10px;">192.168.1.10</td>
            <td style="padding: 15px 10px;">2024-11-06 3:42 PM </td>
            <td style="padding: 15px 10px;">
              <span style="
                background-color: #4caf50;
                padding: 5px 10px;
                border-radius: 5px;
                color: white;
                font-weight: bold;
              ">Resolved</span>
            </td>
          </tr>

          <!-- Example Row 3 -->
          <tr style="
            border-bottom: 1px solid #e0e0e0;
            transition: background-color 0.2s;
          " onmouseover="this.style.backgroundColor='#f0f4f8';" onmouseout="this.style.backgroundColor='transparent';">
            <td style="padding: 15px 10px;">SQL Injection</td>
            <td style="padding: 15px 10px;">suspicious.sql</td>
            <td style="padding: 15px 10px;">2024-11-05 1:30 PM	</td>
            <td style="padding: 15px 10px;">
              <span style="
                background-color: #f44336;
                padding: 5px 10px;
                border-radius: 5px;
                color: white;
                font-weight: bold;
              ">Investigated</span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    </div>

    <!-- Pie Chart and Graph ki script -->
    <script>
      // Pie Chart
      const ctxPie = document
        .getElementById("liabilitiesPieChart")
        .getContext("2d");
      const liabilitiesPieChart = new Chart(ctxPie, {
        type: "doughnut",
        data: {
          labels: ['Phishing', 'Ransomware', 'DDoS Attacks', 'Malware', 'SQL Injection', 'Others'],
          datasets: [
            {
              label: "Cyber Attack Distribution",
              data: [35, 25, 15, 15, 5, 5],
              backgroundColor: ["#4caf50", "#2196F3", "#ff9800", "#f44336","#ffb3e6","#66b3ff"],
              borderColor: "#fff",
              borderWidth: 2,
            },
          ],
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              position: "top",
            },
            tooltip: {
              enabled: true,
            },
          },
        },
      });

      // Line Chart
      const ctxLine = document
        .getElementById("liabilitiesGrowthChart")
        .getContext("2d");
      const liabilitiesGrowthChart = new Chart(ctxLine, {
        type: "bar",
        data: {
          labels: ['Phishing', 'Ransomware', 'DDoS Attacks', 'Malware', 'SQL Injection', 'Others'],
          datasets: [
            {
              label: "Cyber Attack Frequency Analysis",
              data: [120, 90, 75, 60, 40, 20],
              borderColor: "#ff9999",
              backgroundColor: "#66b3ff",
              fill: true,
              tension: 0.1,
            },
          ],
        },
        options: {
          responsive: true,
          plugins: {
            legend: {
              display: true,
              position: "top",
            },
            tooltip: {
              enabled: true,
            },
          },
          scales: {
            x: {
              beginAtZero: true,
            },
            y: {
              beginAtZero: true,
            },
          },
        },
      });
    </script>

    <!-- Modal Logic -->
    <script>
      const investMoreModal = document.getElementById("investMoreModal");
      const investMoreBtn = document.getElementById("investMoreBtn");
      const closeInvestMore = document.getElementById("closeInvestMore");

      investMoreBtn.onclick = function () {
        investMoreModal.style.display = "flex";
      };

      closeInvestMore.onclick = function () {
        investMoreModal.style.display = "none";
      };

      window.onclick = function (event) {
        if (event.target == investMoreModal) {
          investMoreModal.style.display = "none";
        }
        if (event.target == withdrawModal) {
          withdrawModal.style.display = "none";
        }
      };

      const withdrawModal = document.getElementById("withdrawModal");
      const withdrawBtn = document.getElementById("withdrawBtn");
      const closeWithdraw = document.getElementById("closeWithdraw");

      withdrawBtn.onclick = function () {
            withdrawModal.style.display = "flex";
          };
        
          closeWithdraw.onclick = function () {
            withdrawModal.style.display = "none";
          };


    </script>
</body>

